{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "binary_operator_spaces": {
            "default": "align_single_space"
        },
        "braces": true,
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "method_argument_space": {
            "on_multiline": "ensure_fully_multiline"
        }
    }
}
